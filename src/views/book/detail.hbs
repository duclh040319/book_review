<div class="container my-5">
  <a href="javascript:history.back()" class="btn btn-secondary mb-4">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      fill="currentColor"
      class="bi bi-arrow-left-circle my-2"
      viewBox="0 0 16 16"
    >
      <path
        fill-rule="evenodd"
        d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 
 0 0 1 16 0m-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z"
      />
    </svg>
      Quay lại
</a>
  <div class="row">
    <div class="col-md-4">
      <div class="card mb-4">
        <img src="{{book.coverImage}}" class="card-img-top" alt="Ảnh bìa sách" />
        <div class="card-body text-center">
          <h5 class="card-title">{{book.title}}</h5>
          <p class="card-text text-muted">{{book.author}}</p>
        </div>
      </div>
    </div>

    <div class="col-md-8">
      <div class="mb-4">
        <h2>Mô tả sách</h2>
        <p class="text-justify">{{book.description}}</p>
      </div>
    </div>
  </div>

  <hr class="my-5" />

  <div class="row">
    <div class="col-12">
      <div class="mb-5">
        <h2>Viết đánh giá của bạn</h2>
        <form action="/api/v1/books/detail/{{book._id}}/add-review" method="POST">
          <div class="mb-3">
            <label for="rating" class="form-label">Đánh giá (từ 1 đến 10)</label>
            <input
              type="number"
              class="form-control"
              id="rating"
              name="rating"
              min="1"
              max="10"
              required
            />
          </div>
          <div class="mb-3">
            <label for="comment" class="form-label">Bình luận</label>
            <textarea class="form-control" id="comment" name="content" rows="3" required></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Gửi đánh giá</button>
        </form>
      </div>

      <div>
        <h2>Đánh giá từ người đọc</h2>
        <ul class="list-group">
          {{#each reviews}}
            <li class="list-group-item d-flex justify-content-between align-items-start">
              <div class="ms-2 me-auto">
                <div class="fw-bold">{{this.userId.username}}</div>
                <p class="mt-2">{{this.content}}</p>
              </div>
              <span class="badge bg-primary rounded-pill">{{this.rating}}/10</span>
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>