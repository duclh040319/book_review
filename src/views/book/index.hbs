<div class="container-fluid py-4">
  <form class="d-flex my-4 shadow-sm rounded-pill p-1 bg-light" role="search">
    <input class="form-control me-2 border-0 bg-light" type="search" placeholder="Tìm kiếm sách..." aria-label="Search" name="search" value="{{search}}"/>
    <button class="btn btn-outline-success border-0" type="submit">Tìm kiếm</button>
  </form>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
    {{#each books}}
      <div class="col">
        <div class="card h-100 shadow-sm border-0 rounded-3 overflow-hidden">
          <img src="{{this.coverImage}}" class="card-img-top book-cover-image" alt="book" />
          <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-bold text-truncate" title="{{{this.highlightedTitle}}}">{{{this.highlightedTitle}}}</h5>
            <p class="card-text text-muted text-truncate" title="{{{this.highlightedAuthor}}}">{{{this.highlightedAuthor}}}</p>
            <p class="card-text">
                <span class="text-warning">
                    {{#for 1 this.averageRating 1}}⭐️{{/for}}
                </span>
                <small class="text-muted">({{this.averageRating}})</small>
            </p>
            <a href="/api/v1/books/detail/{{this._id}}" class="btn btn-primary mt-auto">XEM CHI TIẾT</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  <nav aria-label="Page navigation" class="d-flex justify-content-center mt-5">
    <ul class="pagination shadow-sm">
      <li class="page-item {{#if (eq currentPage 1)}}disabled{{/if}}">
        <a class="page-link" href="?page={{sub currentPage 1}}&search={{search}}" aria-label="Previous">
          <span aria-hidden="true">&laquo; Trang trước</span>
        </a>
      </li>

      {{#for 1 totalPages 1}}
        <li class="page-item {{#if (eq this ../currentPage)}}active{{/if}}">
          <a class="page-link" href="?page={{this}}&search={{../search}}">{{this}}</a>
        </li>
      {{/for}}

      <li class="page-item {{#if (eq currentPage totalPages)}}disabled{{/if}}">
        <a class="page-link" href="?page={{add currentPage 1}}&search={{search}}" aria-label="Next">
          <span aria-hidden="true">Trang sau &raquo;</span>
        </a>
      </li>
    </ul>
  </nav>

  <nav aria-label="Page navigation mobile" class="d-flex d-md-none overflow-auto mt-3">
    <ul class="pagination pagination-sm justify-content-center flex-nowrap">
      <li class="page-item {{#if (eq currentPage 1)}}disabled{{/if}}">
        <a class="page-link" href="?page={{sub currentPage 1}}&search={{search}}" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
      {{#for 1 totalPages 1}}
        <li class="page-item {{#if (eq this ../currentPage)}}active{{/if}}">
          <a class="page-link" href="?page={{this}}&search={{../search}}">{{this}}</a>
        </li>
      {{/for}}
      <li class="page-item {{#if (eq currentPage totalPages)}}disabled{{/if}}">
        <a class="page-link" href="?page={{add currentPage 1}}&search={{search}}" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    </ul>
  </nav>
</div>

<style>
  .book-cover-image {
    width: 100%;
    height: 250px;
    object-fit: cover;
    transition: transform 0.3s ease-in-out;
  }
  .card:hover .book-cover-image {
    transform: scale(1.05);
  }
  .highlight {
    background-color: #fff3cd; /* Muted yellow */
    font-weight: bold;
    padding: 2px 4px;
    border-radius: 3px;
  }
</style>