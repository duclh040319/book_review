<div class="container-fluid">
  <form class="d-flex my-2" role="search">
    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search" value="{{search}}"/>
    <button class="btn btn-outline-success" type="submit">Search</button>
  </form>
  <div class="row row-cols-1 row-cols-md-4 g-4">
    {{#each books}}
      <div class="col">
        <div class="card h-100">
          <img src="{{this.coverImage}}" class="card-img-top book-cover-image" alt="book" />
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">{{{this.highlightedTitle}}}</h5>
            <p class="card-text">{{{this.highlightedAuthor}}}</p>
            <p class="card-text">Average Rating: {{this.averageRating}}</p>
            <a href="/api/v1/books/detail/{{this._id}}" class="btn btn-primary mt-auto">XEM CHI TIáº¾T</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  <nav aria-label="Page navigation" class="d-none d-md-flex justify-content-center mt-3">
    <ul class="pagination">
      <li class="page-item {{#if (eq currentPage 1)}}disabled{{/if}}">
        <a class="page-link" href="?page={{sub currentPage 1}}&search={{search}}" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>

      {{#for 1 totalPages 1}}
        <li class="page-item {{#if (eq this ../currentPage)}}active{{/if}}">
          <a class="page-link" href="?page={{this}}&search={{../search}}">{{this}}</a>
        </li>
      {{/for}}

      <li class="page-item {{#if (eq currentPage totalPages)}}disabled{{/if}}">
        <a class="page-link" href="?page={{add currentPage 1}}&search={{search}}" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    </ul>
  </nav>

  <nav aria-label="Page navigation mobile" class="d-flex d-md-none overflow-auto mt-3">
    <ul class="pagination pagination-sm justify-content-center flex-nowrap">
      <li class="page-item {{#if (eq currentPage 1)}}disabled{{/if}}">
        <a class="page-link" href="?page={{sub currentPage 1}}&search={{search}}" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>

      {{#for 1 totalPages 1}}
        <li class="page-item {{#if (eq this ../currentPage)}}active{{/if}}">
          <a class="page-link" href="?page={{this}}&search={{../search}}">{{this}}</a>
        </li>
      {{/for}}

      <li class="page-item {{#if (eq currentPage totalPages)}}disabled{{/if}}">
        <a class="page-link" href="?page={{add currentPage 1}}&search={{search}}" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    </ul>
  </nav>

</div>
<style>
  .book-cover-image {
    width: 100%;
    height: 250px;
    object-fit: cover;
  }
  .highlight {
    background-color: yellow;
    font-weight: bold;
  }
</style>